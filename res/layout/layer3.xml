<?xml version="1.0" encoding="utf-8"?>
<net.nessness.android.sample.parallaxscroll.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="none" >

    <FrameLayout
        android:id="@+id/layer_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/layer_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:src="@drawable/layer3" />
        
        <Button
            android:text="3-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:onClick="onButtonClick" />
        <Button
            android:text="3-2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="100dp"
            android:onClick="onButtonClick" />
        <Button
            android:text="3-3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="150dp"
            android:onClick="onButtonClick" />
    </FrameLayout>

</net.nessness.android.sample.parallaxscroll.ParallaxScrollView>